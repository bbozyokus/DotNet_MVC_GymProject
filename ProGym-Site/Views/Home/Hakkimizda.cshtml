@model ProGym_Site.Models.Hakkimizda

@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- Page top section -->
<section class="page-top-section set-bg" data-setbg="@Model.Anagorsel">
    <div class="container">
        <h2>Hakkımızda</h2>
    </div>
</section>
<!-- Page top section end -->
<!-- About section -->
<section class="about-section">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-lg-5">
                <div class="section-title text-center">
                    <h2><span>@Model.Baslik</span></h2>
                </div>
            </div>
        </div>            
        <div class="row">

            <div class="col-lg-4">
                <div class="about-image">
                    <img src="@Model.ResimURL">
                </div>
            </div>

            <div class="col-lg-7">
                <div class="about-text">
                    <p>@Html.Raw(Model.Aciklama)</p>
                </div>
            </div>
        </div>
            


        
        <div class="text-center pt-4">
            <a href="/Iletisim/" class="site-btn">Üye olun</a>
        </div>
    </div>
</section>